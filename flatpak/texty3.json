{
    "app-id" : "ca.footeware.java.texty3",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/openjdk/gradle/bin:/app/jre/bin",
        "env": {
            "GRADLE_USER_HOME": "/run/build/texty3/gradle",
            "JAVA_HOME": "/usr/lib/sdk/openjdk"
        }
    },
    "command" : "/app/texty3/bin/texty3",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--env=PATH=/app/jre/bin:/usr/bin"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "openjdk",
            "buildsystem" : "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk/install.sh" ]
        },
        {
            "name" : "texty3",
            "buildsystem" : "simple",
            "build-commands" : [ "gradle installDist" ],
            "sources" : [
                { "type" : "dir", "path" : ".." },
                "maven-dependencies.json"
            ]
        }
    ]
}
